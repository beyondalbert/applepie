<%= form_for @user, :url => password_reset_path(params[:id]), html: { class: "form-signin"} do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h2 class="form-signin-heading">修改密码</h2>
  帐号：<%= @user.email %>
  <%= f.password_field(:password, class: "form-control", placeholder: "密码") %>
  <%= f.password_field(:password_confirmation, class: "form-control", placeholder: "确认密码")%>
  <%= f.submit "修 改", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
